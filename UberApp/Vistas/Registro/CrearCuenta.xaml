<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UberApp.Vistas.Registro.CrearCuenta"
             NavigationPage.HasNavigationBar="False"
             
             >

    <StackLayout Orientation="Vertical"
                 Padding="20"
                 Spacing="30"
                 >
        <Label Text="Selecciona tu cuenta google"
               FontSize="Medium"
               TextColor="Black"
               />

        <Label Text="Si continuas es posible que recibas un SMS para verificar la cuenta. Se puede aplicar los precios de mensajes y datos
               "
        />

        <Frame HasShadow="False" BackgroundColor="#EEEEEE" CornerRadius="10"
               Padding="15"
               >
            <StackLayout Orientation="Horizontal">
                <Image  Source="https://i.ibb.co/k13RJ7j/google.png" 
                        HeightRequest="35"
                        />
                <Label Text="Continuar con Google"
                       HorizontalOptions="CenterAndExpand"
                       VerticalOptions="Center"
                       FontAttributes="Bold"
                       TextColor="Black"
                       />
            </StackLayout>
        </Frame>
    </StackLayout>
    
</ContentPage>